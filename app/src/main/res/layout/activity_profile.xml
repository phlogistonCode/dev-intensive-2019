<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="ru.skillbranch.devintensive.ui.profile.ProfileActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ru.skillbranch.devintensive.ui.custom.AspectRatioImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/code"
                android:scaleType="centerCrop"
                app:aspectRatio="1.78"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/font_normal_16">

            <ImageButton
                    android:layout_width="@dimen/button_normal_40"
                    android:layout_height="@dimen/button_normal_40"
                    android:layout_toStartOf="@id/iv_avatar"
                    android:layout_marginEnd="@dimen/spacing_huge_32"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/btn_round_bg"
                    android:src="@drawable/ic_brightness_high_black_24dp"/>

            <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/avatar_normal_112"
                    android:layout_height="@dimen/avatar_normal_112"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_avatar"/>

            <ImageButton
                    android:layout_width="@dimen/button_normal_40"
                    android:layout_height="@dimen/button_normal_40"
                    android:layout_toEndOf="@id/iv_avatar"
                    android:layout_marginStart="@dimen/spacing_huge_32"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/btn_round_bg"
                    android:src="@drawable/ic_edit_black_24dp"/>

            <TextView
                    style="@style/Profile.Header.Nickname"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_avatar"
                    tools:text="John Doe"/>

            <TextView
                    style="@style/Profile.Header.Rank"
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    tools:text="Junior Android Developer"/>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_primary_light">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_normal_16"
                android:paddingBottom="@dimen/spacing_normal_16">

            <TextView
                    style="@style/Profile.Metrics.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_rating"
                    tools:text="0"/>

            <TextView
                    style="@style/Profile.Metrics.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_label_rating"/>

        </LinearLayout>

        <view
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_normal_16"
                android:layout_marginBottom="@dimen/spacing_normal_16"
                android:background="@color/color_grey_light"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_normal_16"
                android:paddingBottom="@dimen/spacing_normal_16">

            <TextView
                    style="@style/Profile.Metrics.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_respect"
                    tools:text="0"/>

            <TextView
                    style="@style/Profile.Metrics.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_label_respect"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
            style="@style/Profile.InfoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ic_avatar"
                android:layout_width="@dimen/button_normal_40"
                android:layout_height="@dimen/button_normal_40"
                android:src="@drawable/ic_avatar"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wr_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ic_avatar"
                android:layout_marginStart="@dimen/spacing_normal_16">

            <EditText
                    style="@style/Profile.EditText.Single"
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_first_name"
                    tools:text="TESTtext"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ic_avatar"
                android:layout_marginStart="@dimen/spacing_normal_16"
                android:layout_below="@+id/wr_first_name">

            <EditText
                    style="@style/Profile.EditText.Single"
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_last_name"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"/>

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey_light"
            android:layout_marginStart="@dimen/devider_avatar_72"/>

    <LinearLayout
            style="@style/Profile.InfoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="@dimen/button_normal_40"
                android:layout_height="@dimen/button_normal_40"
                android:src="@drawable/ic_about"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal_16">

            <EditText
                    style="@style/Profile.EditText"
                    android:id="@+id/et_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_about"
                    android:inputType="textMultiLine"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey_light"
            android:layout_marginStart="@dimen/devider_avatar_72"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/Profile.InfoItem">

        <ImageView
                android:layout_width="@dimen/button_normal_40"
                android:layout_height="@dimen/button_normal_40"
                android:src="@drawable/ic_repository"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal_16"
                android:layout_marginEnd="@dimen/spacing_normal_16"
                android:layout_weight="1">

            <EditText
                    style="@style/Profile.EditText.Single"
                    android:id="@+id/et_repository"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_repository"
                    android:inputType="textUri"
                    android:imeOptions="actionDone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_eye_24dp"
                android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>